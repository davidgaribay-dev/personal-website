---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getEntry } from 'astro:content';
import { siteConfig } from '../../data/site';

// Get the slug from URL params
const { slug } = Astro.params;

// Fetch the project entry
const project = await getEntry('projects', slug || '');

// Handle case where project doesn't exist
if (!project) {
  return Astro.redirect('/projects');
}

const { Content } = await project.render();

// Extract YouTube video ID from URL if present
function getYouTubeEmbedUrl(url: string): string | null {
  const match = url.match(/(?:youtube\.com\/watch\?v=|youtu\.be\/)([^&\s]+)/);
  if (match) {
    return `https://www.youtube.com/embed/${match[1]}`;
  }
  return null;
}

const embedUrl = project.data.videoUrl ? getYouTubeEmbedUrl(project.data.videoUrl) : null;

// Project structured data for SEO
const projectSchema = {
  "@context": "https://schema.org",
  "@type": "SoftwareSourceCode",
  "name": project.data.title,
  "description": project.data.description,
  "image": project.data.image ? `${siteConfig.url}${project.data.image}` : `${siteConfig.url}/me.jpg`,
  "codeRepository": project.data.github || project.data.link,
  "programmingLanguage": project.data.technologies,
  "author": {
    "@type": "Person",
    "name": siteConfig.name,
    "url": siteConfig.url
  }
};
---

<BaseLayout
  title={`${project.data.title} | ${siteConfig.name}`}
  description={project.data.description}
  image={project.data.image ? `${siteConfig.url}${project.data.image}` : undefined}
>
  <!-- Project structured data -->
  <script is:inline type="application/ld+json" set:html={JSON.stringify(projectSchema)} />

  <article class="min-h-screen">
    <!-- Hero Cover Image -->
    {project.data.image && !project.data.hideHeroImage && (
      <div class="w-full mb-12">
        <img
          src={project.data.image}
          alt={project.data.title}
          class="w-full h-[400px] md:h-[500px] lg:h-[600px] object-cover"
        />
      </div>
    )}

    <div class="px-6 pb-24">
      <div class="mx-auto max-w-4xl">
        <!-- Back Link -->
        <a
          href="/projects"
          class="inline-flex items-center gap-2 text-text-secondary hover:text-text-primary transition-colors mb-16 font-medium"
        >
          <span aria-hidden="true">←</span> Back to Projects
        </a>

        <!-- Project Header -->
        <header class="mb-16">
          <div class="flex justify-between items-start mb-4">
            <h1 class="text-4xl md:text-6xl font-bold leading-tight tracking-tight">
              {project.data.title}
            </h1>
            {project.data.featured && (
              <span class="text-zen-coral text-sm font-medium">Featured</span>
            )}
          </div>

          <p class="text-xl text-text-secondary leading-relaxed font-light mb-8">
            {project.data.description}
          </p>

          {project.data.technologies.length > 0 && (
            <div class="flex flex-wrap gap-3 mb-8">
              {project.data.technologies.map((tech) => (
                <span class="text-text-tertiary text-sm">
                  {tech}
                </span>
              ))}
            </div>
          )}

          <div class="flex gap-6 flex-wrap">
            <a
              href={project.data.link}
              target="_blank"
              rel="noopener noreferrer"
              class="text-text-primary hover:text-text-secondary transition-colors text-lg font-medium underline underline-offset-4"
            >
              View Project
            </a>
            {project.data.github && (
              <a
                href={project.data.github}
                target="_blank"
                rel="noopener noreferrer"
                class="text-text-primary hover:text-text-secondary transition-colors text-lg font-medium underline underline-offset-4"
              >
                GitHub
              </a>
            )}
          </div>
        </header>

        <!-- Video Embed -->
        {embedUrl && (
          <div class="mb-16">
            <div class="aspect-video w-full">
              <iframe
                src={embedUrl}
                title={`${project.data.title} video`}
                class="w-full h-full rounded-lg"
                frameborder="0"
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
                allowfullscreen
              />
            </div>
          </div>
        )}

        <!-- Project Content -->
        <div class="article-content">
          <Content />
        </div>

        <!-- Project Footer -->
        <footer class="mt-20 pt-10 border-t border-zen-subtle">
          <a
            href="/projects"
            class="inline-flex items-center gap-2 text-text-primary hover:text-text-secondary transition-colors font-medium underline underline-offset-4"
          >
            <span aria-hidden="true">←</span> Back to all projects
          </a>
        </footer>
      </div>
    </div>
  </article>
</BaseLayout>

<style is:global>
  /* Reuse article content typography from notes */
  .article-content {
    font-family: var(--font-family-sans);
    font-size: 1.0625rem;
    line-height: 1.75;
    color: var(--color-text-primary);
    font-weight: 400;
  }

  .article-content h2 {
    font-family: var(--font-family-sans);
    font-size: 1.875rem;
    font-weight: 700;
    line-height: 1.2;
    color: var(--color-text-primary);
    margin-top: 3.5rem;
    margin-bottom: 1.25rem;
    letter-spacing: -0.025em;
  }

  .article-content h3 {
    font-family: var(--font-family-sans);
    font-size: 1.5rem;
    font-weight: 600;
    line-height: 1.3;
    color: var(--color-text-primary);
    margin-top: 2.75rem;
    margin-bottom: 1rem;
    letter-spacing: -0.02em;
  }

  .article-content p {
    margin-bottom: 1.5rem;
    color: var(--color-text-primary);
  }

  .article-content a {
    color: var(--color-zen-coral);
    text-decoration: none;
    border-bottom: 1px solid transparent;
    padding: 0.0625rem 0.125rem;
    margin: 0 -0.125rem;
    border-radius: 0.25rem;
    transition: all 0.2s ease;
  }

  .article-content a:hover {
    border: 1px solid var(--color-zen-coral);
    background-color: var(--color-zen-coral-muted);
  }

  .article-content strong {
    font-weight: 600;
    color: var(--color-text-primary);
  }

  .article-content ul,
  .article-content ol {
    margin-bottom: 1.5rem;
    padding-left: 1.75rem;
  }

  .article-content ul {
    list-style-type: disc;
  }

  .article-content ol {
    list-style-type: decimal;
  }

  .article-content li {
    margin-bottom: 0.5rem;
    line-height: 1.75;
    padding-left: 0.375rem;
  }

  .article-content li::marker {
    color: var(--color-text-secondary);
  }

  .article-content code:not(pre code) {
    font-family: var(--font-family-mono);
    font-size: 0.875em;
    background: var(--color-code-inline-bg);
    color: var(--color-code-inline);
    padding: 0.125em 0.375em;
    border-radius: 0.1875rem;
    font-weight: 500;
  }

  .article-content pre {
    font-family: var(--font-family-mono);
    font-size: 0.875rem;
    line-height: 1.6;
    background: var(--color-code-bg);
    border: 1px solid var(--color-code-border);
    border-radius: 0.375rem;
    padding: 1.25rem 1.5rem;
    margin: 2rem 0;
    overflow-x: auto;
  }

  .article-content pre code {
    background: transparent;
    border: none;
    padding: 0;
    font-size: inherit;
    color: var(--color-code-text);
    font-weight: 400;
  }

  .article-content > h2:first-child {
    margin-top: 0;
  }
</style>
