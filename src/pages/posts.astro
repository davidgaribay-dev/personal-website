---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

// Get all posts entries
const allPosts = await getCollection('posts', ({ data }) => {
  return data.draft !== true;
});

// Sort by publish date (newest first)
const sortedPosts = allPosts.sort((a, b) =>
  b.data.publishDate.getTime() - a.data.publishDate.getTime()
);

// Get unique tags
const allTags = [...new Set(allPosts.flatMap(post => post.data.tags))].sort();

// Featured posts
const featuredPosts = sortedPosts.filter(post => post.data.featured);
---

<BaseLayout
  title="David Garibay's Blog - Agentic AI, Test Automation, and Developer Tools"
  description="Read technical articles on Agentic AI, Claude Code, test automation frameworks, homelab infrastructure, and modern developer tools. Guides, tutorials, and insights from a Senior SDET."
>
  <div class="min-h-screen py-24 px-6">
    <div class="container mx-auto max-w-5xl">
      <!-- Header -->
      <div class="text-center mb-16">
        <h1 class="text-4xl md:text-6xl font-bold mb-4">Posts</h1>
        <p class="text-text-secondary text-lg md:text-xl">
          Thoughts on software testing, automation, development, and lessons learned along the way
        </p>
      </div>

      {/* All Posts Section */}
      {sortedPosts.length === 0 ? (
        <div class="text-center py-32">
          <h2 class="text-3xl font-bold mb-4">No posts yet</h2>
          <p class="text-text-secondary text-lg">
            I'm working on some great content. Check back soon!
          </p>
        </div>
      ) : (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {sortedPosts.map((post) => (
            <article class="group">
              <a href={`/posts/${post.slug}`} class="block">
                {post.data.image && (
                  <div class="mb-4 overflow-hidden rounded-lg aspect-video">
                    <img
                      src={post.data.image}
                      alt={post.data.title}
                      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                    />
                  </div>
                )}
                <time class="text-xs text-text-tertiary mb-2 block">
                  {post.data.publishDate.toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'short',
                    day: 'numeric'
                  })}
                </time>
                <h2 class="text-xl font-bold mb-2 group-hover:text-zen-coral transition-colors line-clamp-2">
                  {post.data.title}
                </h2>
              </a>
              <div class="flex flex-wrap gap-2 mt-2">
                {post.data.tags.slice(0, 3).map((tag) => (
                  <a
                    href={`/posts/tags/${tag}`}
                    class="text-text-tertiary hover:text-zen-coral transition-colors text-xs"
                  >
                    #{tag}
                  </a>
                ))}
              </div>
            </article>
          ))}
        </div>
      )}
    </div>
  </div>
</BaseLayout>
