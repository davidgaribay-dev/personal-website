---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection, getEntry } from 'astro:content';

// Get the slug from URL params
const { slug } = Astro.params;

// Fetch the post entry
const post = await getEntry('notes', slug || '');

// Handle case where post doesn't exist or is a draft
if (!post || post.data.draft) {
  return Astro.redirect('/notes');
}

const { Content } = await post.render();

// Format dates
const publishDate = post.data.publishDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});

const updatedDate = post.data.updatedDate?.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});

// Calculate reading time (rough estimate: 200 words per minute)
const content = await post.render();
const wordCount = content.remarkPluginFrontmatter?.wordCount || 0;
const readingTime = Math.ceil(wordCount / 200);
---

<BaseLayout>
  <article class="min-h-screen py-16 md:py-24 px-6">
    <div class="mx-auto max-w-2xl">
      <!-- Back Link -->
      <a
        href="/notes"
        class="inline-flex items-center gap-2 text-text-secondary hover:text-zen-coral transition-colors mb-12 text-sm font-medium"
      >
        <span aria-hidden="true">←</span> Back to Notes
      </a>

      <!-- Article Header -->
      <header class="mb-16">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-8 leading-[1.1] tracking-tight text-text-primary">
          {post.data.title}
        </h1>

        <div class="flex flex-wrap items-center gap-3 text-text-tertiary text-sm mb-8">
          <time datetime={post.data.publishDate.toISOString()}>
            {publishDate}
          </time>
          {readingTime > 0 && (
            <>
              <span aria-hidden="true">•</span>
              <span>{readingTime} min read</span>
            </>
          )}
          {updatedDate && (
            <>
              <span aria-hidden="true">•</span>
              <span>Updated {updatedDate}</span>
            </>
          )}
        </div>

        <p class="text-xl md:text-2xl text-text-secondary leading-relaxed font-light">
          {post.data.description}
        </p>

        {post.data.tags.length > 0 && (
          <div class="flex flex-wrap gap-2 mt-8">
            {post.data.tags.map((tag) => (
              <span class="px-3 py-1.5 bg-zen-subtle text-text-secondary text-sm rounded-full font-medium">
                {tag}
              </span>
            ))}
          </div>
        )}
      </header>

      <!-- Article Content -->
      <div class="article-content">
        <Content />
      </div>

      <!-- Article Footer -->
      <footer class="mt-20 pt-10 border-t border-zen-subtle">
        <a
          href="/notes"
          class="inline-flex items-center gap-2 text-zen-coral hover:text-zen-coral-hover transition-colors font-medium text-sm"
        >
          <span aria-hidden="true">←</span> Back to all notes
        </a>
      </footer>
    </div>
  </article>
</BaseLayout>

<style is:global>
  /* Article content typography - Anthropic-inspired */
  .article-content {
    font-family: var(--font-family-sans);
    font-size: 1.0625rem; /* 17px */
    line-height: 1.75;
    color: var(--color-text-primary);
    font-weight: 400;
  }

  /* Headings */
  .article-content h2 {
    font-family: var(--font-family-sans);
    font-size: 1.875rem; /* 30px */
    font-weight: 700;
    line-height: 1.2;
    color: var(--color-text-primary);
    margin-top: 3.5rem;
    margin-bottom: 1.25rem;
    letter-spacing: -0.025em;
  }

  .article-content h3 {
    font-family: var(--font-family-sans);
    font-size: 1.5rem; /* 24px */
    font-weight: 600;
    line-height: 1.3;
    color: var(--color-text-primary);
    margin-top: 2.75rem;
    margin-bottom: 1rem;
    letter-spacing: -0.02em;
  }

  .article-content h4 {
    font-family: var(--font-family-sans);
    font-size: 1.25rem; /* 20px */
    font-weight: 600;
    line-height: 1.4;
    color: var(--color-text-primary);
    margin-top: 2.25rem;
    margin-bottom: 0.75rem;
    letter-spacing: -0.015em;
  }

  /* Paragraphs */
  .article-content p {
    margin-bottom: 1.5rem;
    color: var(--color-text-primary);
  }

  /* Links */
  .article-content a {
    color: var(--color-zen-coral);
    text-decoration: none;
    border-bottom: 1px solid rgba(247, 111, 83, 0.3);
    transition: border-color 0.2s ease;
  }

  .article-content a:hover {
    border-bottom-color: var(--color-zen-coral);
  }

  /* Strong/Bold */
  .article-content strong {
    font-weight: 600;
    color: var(--color-text-primary);
  }

  /* Emphasis/Italic */
  .article-content em {
    font-style: italic;
  }

  /* Inline code */
  .article-content code:not(pre code) {
    font-family: var(--font-family-mono);
    font-size: 0.875em;
    background: var(--color-zen-bg-secondary);
    color: #e01e5a;
    padding: 0.125em 0.375em;
    border-radius: 0.1875rem;
    font-weight: 500;
  }

  /* Code blocks */
  .article-content pre {
    font-family: var(--font-family-mono);
    font-size: 0.875rem; /* 14px */
    line-height: 1.6;
    background: var(--color-zen-bg-secondary);
    border: 1px solid var(--color-zen-subtle);
    border-radius: 0.375rem;
    padding: 1.25rem 1.5rem;
    margin: 2rem 0;
    overflow-x: auto;
    tab-size: 2;
  }

  .article-content pre code {
    background: transparent;
    border: none;
    padding: 0;
    font-size: inherit;
    color: var(--color-text-primary);
    font-weight: 400;
  }

  /* Lists */
  .article-content ul,
  .article-content ol {
    margin-bottom: 1.5rem;
    padding-left: 1.75rem;
  }

  .article-content ul {
    list-style-type: disc;
  }

  .article-content ol {
    list-style-type: decimal;
  }

  .article-content li {
    margin-bottom: 0.5rem;
    line-height: 1.75;
    padding-left: 0.375rem;
  }

  .article-content li > p {
    margin-bottom: 0.5rem;
  }

  .article-content li::marker {
    color: var(--color-text-secondary);
  }

  /* Nested lists */
  .article-content li > ul,
  .article-content li > ol {
    margin-top: 0.5rem;
    margin-bottom: 0.5rem;
  }

  /* Blockquotes */
  .article-content blockquote {
    border-left: 3px solid var(--color-zen-coral);
    padding-left: 1.25rem;
    margin: 2rem 0;
    font-style: italic;
    color: var(--color-text-secondary);
    font-size: 1.0625rem;
  }

  .article-content blockquote p {
    margin-bottom: 1rem;
  }

  .article-content blockquote p:last-child {
    margin-bottom: 0;
  }

  /* Images */
  .article-content img {
    max-width: 100%;
    height: auto;
    border-radius: 0.5rem;
    margin: 2.5rem 0;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
  }

  /* Horizontal rules */
  .article-content hr {
    border: none;
    border-top: 1px solid var(--color-zen-subtle);
    margin: 3rem 0;
  }

  /* Tables */
  .article-content table {
    width: 100%;
    border-collapse: collapse;
    margin: 2rem 0;
    font-size: 0.95rem;
  }

  .article-content th {
    font-family: var(--font-family-sans);
    font-weight: 600;
    text-align: left;
    padding: 0.75rem;
    border-bottom: 2px solid var(--color-zen-subtle);
    color: var(--color-text-primary);
  }

  .article-content td {
    padding: 0.75rem;
    border-bottom: 1px solid var(--color-zen-subtle);
  }

  /* Smooth anchor links */
  .article-content h2[id],
  .article-content h3[id],
  .article-content h4[id] {
    scroll-margin-top: 100px;
  }

  .article-content h2[id]:hover::before,
  .article-content h3[id]:hover::before,
  .article-content h4[id]:hover::before {
    content: '#';
    position: absolute;
    margin-left: -1.5rem;
    color: var(--color-zen-coral);
    font-weight: 400;
    opacity: 0.5;
  }

  /* First paragraph after heading - keep consistent */
  .article-content h2 + p {
    margin-top: 0.25rem;
  }

  .article-content h3 + p {
    margin-top: 0.25rem;
  }

  /* Better spacing for first h2 */
  .article-content > h2:first-child {
    margin-top: 0;
  }
</style>
