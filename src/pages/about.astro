---
import BaseLayout from '../layouts/BaseLayout.astro';

const skills = {
  testing: ['Playwright', 'Selenium', 'Cypress', 'Robot Framework', 'PyTest'],
  languages: ['TypeScript', 'JavaScript', 'Python', 'C#', 'Dart', 'Kotlin'],
  frontend: ['React', 'Angular', 'Next.js', 'Astro', 'Tailwind CSS'],
  backend: ['Node.js', 'Django', 'FastAPI'],
  cloud: ['AWS', 'Google Cloud', 'Azure', 'Firebase'],
  tools: ['Git', 'Docker', 'Jira', 'CI/CD'],
};

const philosophy = [
  {
    title: 'Quality First',
    description: 'Quality isn\'t just about finding bugsâ€”it\'s about preventing them through thoughtful design, comprehensive testing, and continuous improvement.'
  },
  {
