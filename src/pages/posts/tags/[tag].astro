---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { siteConfig } from '../../../data/site';

// Get the tag from URL params
const { tag } = Astro.params;

// Get all posts with this tag
const allPosts = await getCollection('posts', ({ data }) => {
  return !data.draft && data.tags.includes(tag || '');
});

// Sort by publish date (newest first)
const sortedPosts = allPosts.sort((a, b) =>
  b.data.publishDate.getTime() - a.data.publishDate.getTime()
);

// Format tag for display (capitalize first letter, replace hyphens with spaces)
const tagDisplay = tag ? tag.split('-').map(word =>
  word.charAt(0).toUpperCase() + word.slice(1)
).join(' ') : '';

// SEO meta
const title = `${tagDisplay} Articles by David Garibay | Blog`;
const description = `Read all articles about ${tagDisplay}. Technical guides, tutorials, and insights on ${tagDisplay} and related topics.`;
---

<BaseLayout
  title={title}
  description={description}
  breadcrumbs={[
    { name: "Home", url: siteConfig.url },
    { name: "Posts", url: `${siteConfig.url}/posts` },
    { name: `#${tag}`, url: `${siteConfig.url}/posts/tags/${tag}` }
  ]}
>
  <div class="min-h-screen py-24 px-6">
    <div class="container mx-auto max-w-5xl">
      <!-- Header -->
      <div class="text-center mb-16">
        <a
          href="/posts"
          class="inline-flex items-center gap-2 text-text-secondary hover:text-text-primary transition-colors mb-8 font-medium"
        >
          <span aria-hidden="true">‚Üê</span> Back to All Posts
        </a>
        <h1 class="text-4xl md:text-6xl font-bold mb-4">#{tag}</h1>
        <p class="text-text-secondary text-lg md:text-xl">
          {sortedPosts.length} {sortedPosts.length === 1 ? 'article' : 'articles'} tagged with #{tag}
        </p>
      </div>

      {/* Posts Grid */}
      {sortedPosts.length === 0 ? (
        <div class="text-center py-32">
          <h2 class="text-3xl font-bold mb-4">No posts found</h2>
          <p class="text-text-secondary text-lg mb-8">
            There are no published posts with this tag.
          </p>
          <a
            href="/posts"
            class="text-zen-coral hover:text-zen-coral-hover transition-colors text-lg font-medium underline underline-offset-4"
          >
            View all posts
          </a>
        </div>
      ) : (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {sortedPosts.map((post) => (
            <article class="group">
              <a href={`/posts/${post.slug}`} class="block">
                {post.data.image && (
                  <div class="mb-4 overflow-hidden rounded-lg aspect-video">
                    <img
                      src={post.data.image}
                      alt={post.data.title}
                      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                    />
                  </div>
                )}
                <time class="text-xs text-text-tertiary mb-2 block">
                  {post.data.publishDate.toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'short',
                    day: 'numeric'
                  })}
                </time>
                <h2 class="text-xl font-bold mb-2 group-hover:text-zen-coral transition-colors line-clamp-2">
                  {post.data.title}
                </h2>
                <div class="flex flex-wrap gap-2">
                  {post.data.tags.slice(0, 3).map((postTag) => (
                    <span class="text-text-tertiary text-xs">
                      #{postTag}
                    </span>
                  ))}
                </div>
              </a>
            </article>
          ))}
        </div>
      )}
    </div>
  </div>
</BaseLayout>
