---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection, getEntry } from 'astro:content';
import { siteConfig } from '../../data/site';

// Get the slug from URL params
const { slug } = Astro.params;

// Fetch the post entry
const post = await getEntry('posts', slug || '');

// Handle case where post doesn't exist or is a draft
if (!post || post.data.draft) {
  return Astro.redirect('/posts');
}

const { Content } = await post.render();

// Format dates
const publishDate = post.data.publishDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});

const updatedDate = post.data.updatedDate?.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});

// Calculate reading time (rough estimate: 200 words per minute)
const content = await post.render();
const wordCount = content.remarkPluginFrontmatter?.wordCount || 0;
const readingTime = Math.ceil(wordCount / 200);

// Article structured data for SEO
const articleSchema = {
  "@context": "https://schema.org",
  "@type": "Article",
  "headline": post.data.title,
  "description": post.data.description,
  "image": post.data.image ? `${siteConfig.url}${post.data.image}` : `${siteConfig.url}/me.jpg`,
  "datePublished": post.data.publishDate.toISOString(),
  "dateModified": post.data.updatedDate?.toISOString() || post.data.publishDate.toISOString(),
  "author": {
    "@type": "Person",
    "name": siteConfig.name,
    "url": siteConfig.url
  },
  "publisher": {
    "@type": "Person",
    "name": siteConfig.name,
    "url": siteConfig.url
  },
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": `${siteConfig.url}/posts/${slug}`
  },
  "keywords": post.data.tags.join(", ")
};
---

<BaseLayout
  title={`${post.data.title} | ${siteConfig.name}`}
  description={post.data.description}
  image={post.data.image ? `${siteConfig.url}${post.data.image}` : undefined}
  type="article"
>
  <!-- Article structured data -->
  <script is:inline type="application/ld+json" set:html={JSON.stringify(articleSchema)} />

  <article class="min-h-screen">
    <!-- Hero Cover Image -->
    {post.data.image && !post.data.hideHeroImage && (
      <div class="w-full mb-12">
        <img
          src={post.data.image}
          alt={post.data.title}
          class="w-full h-[500px] md:h-[600px] lg:h-[700px] object-cover"
        />
      </div>
    )}

    <div class="px-6 pb-24">
      <div class="mx-auto max-w-4xl">
        <!-- Back Link -->
        <a
          href="/posts"
          class="inline-flex items-center gap-2 text-text-secondary hover:text-text-primary transition-colors mb-16 font-medium"
        >
          <span aria-hidden="true">←</span> Back to Posts
        </a>

        <!-- Article Header -->
        <header class="mb-16">
          <h1 class="text-4xl md:text-6xl font-bold mb-8 leading-tight tracking-tight">
            {post.data.title}
          </h1>

          <div class="flex flex-wrap items-center gap-3 text-text-tertiary text-sm mb-8">
            <time datetime={post.data.publishDate.toISOString()}>
              {publishDate}
            </time>
            {readingTime > 0 && (
              <>
                <span aria-hidden="true">•</span>
                <span>{readingTime} min read</span>
              </>
            )}
            {updatedDate && (
              <>
                <span aria-hidden="true">•</span>
                <span>Updated {updatedDate}</span>
              </>
            )}
          </div>

          <p class="text-xl text-text-secondary leading-relaxed font-light mb-8">
            {post.data.description}
          </p>

          {post.data.tags.length > 0 && (
            <div class="flex flex-wrap gap-3">
              {post.data.tags.map((tag) => (
                <span class="text-text-tertiary text-sm">
                  #{tag}
                </span>
              ))}
            </div>
          )}
        </header>

      <!-- Article Content -->
      <div class="article-content">
        <Content />
      </div>

      <!-- Article Footer -->
      <footer class="mt-20 pt-10 border-t border-zen-subtle">
        <a
          href="/posts"
          class="inline-flex items-center gap-2 text-text-primary hover:text-text-secondary transition-colors font-medium underline underline-offset-4"
        >
          <span aria-hidden="true">←</span> Back to all posts
        </a>
      </footer>
    </div>
  </article>
</BaseLayout>

<style is:global>
  /* Article content typography - Anthropic-inspired */
  .article-content {
    font-family: var(--font-family-sans);
    font-size: 1.0625rem; /* 17px */
    line-height: 1.75;
    color: var(--color-text-primary);
    font-weight: 400;
  }

  /* Headings */
  .article-content h2 {
    font-family: var(--font-family-sans);
    font-size: 1.875rem; /* 30px */
    font-weight: 700;
    line-height: 1.2;
    color: var(--color-text-primary);
    margin-top: 3.5rem;
    margin-bottom: 1.25rem;
    letter-spacing: -0.025em;
  }

  .article-content h3 {
    font-family: var(--font-family-sans);
    font-size: 1.5rem; /* 24px */
    font-weight: 600;
    line-height: 1.3;
    color: var(--color-text-primary);
    margin-top: 2.75rem;
    margin-bottom: 1rem;
    letter-spacing: -0.02em;
  }

  .article-content h4 {
    font-family: var(--font-family-sans);
    font-size: 1.25rem; /* 20px */
    font-weight: 600;
    line-height: 1.4;
    color: var(--color-text-primary);
    margin-top: 2.25rem;
    margin-bottom: 0.75rem;
    letter-spacing: -0.015em;
  }

  /* Paragraphs */
  .article-content p {
    margin-bottom: 1.5rem;
    color: var(--color-text-primary);
  }

  /* Links */
  .article-content a {
    color: var(--color-zen-coral);
    text-decoration: none;
    border-bottom: 1px solid transparent;
    padding: 0.0625rem 0.125rem;
    margin: 0 -0.125rem;
    border-radius: 0.25rem;
    transition: all 0.2s ease;
    display: inline-block;
  }

  .article-content a:hover {
    border: 1px solid var(--color-zen-coral);
    background-color: var(--color-zen-coral-muted);
  }

  /* Full width images */
  .article-content a:has(img) {
    display: block;
    width: 100%;
    padding: 0;
    margin: 0;
    border: none;
  }

  .article-content a:has(img):hover {
    border: none;
    background-color: transparent;
  }

  .article-content a > img {
    width: 100%;
  }

  /* Strong/Bold */
  .article-content strong {
    font-weight: 600;
    color: var(--color-text-primary);
  }

  /* Emphasis/Italic */
  .article-content em {
    font-style: italic;
  }

  /* Inline code */
  .article-content code:not(pre code) {
    font-family: var(--font-family-mono);
    font-size: 0.875em;
    background: var(--color-code-inline-bg);
    color: var(--color-code-inline);
    padding: 0.125em 0.375em;
    border-radius: 0.1875rem;
    font-weight: 500;
  }

  /* Code blocks */
  .article-content .code-block-wrapper {
    position: relative;
    margin: 2rem 0;
  }

  .article-content .code-block-wrapper pre {
    margin: 0;
  }

  .article-content pre {
    font-family: var(--font-family-mono);
    font-size: 0.875rem; /* 14px */
    line-height: 1.6;
    background: var(--color-code-bg);
    border: 1px solid var(--color-code-border);
    border-radius: 0.375rem;
    padding: 1.25rem 1.5rem;
    margin: 2rem 0;
    overflow-x: auto;
    tab-size: 2;
  }

  .article-content pre code {
    background: transparent;
    border: none;
    padding: 0;
    font-size: inherit;
    color: var(--color-code-text);
    font-weight: 400;
  }

  /* Copy button */
  .article-content .copy-button {
    position: absolute;
    top: 0.5rem;
    right: 0.5rem;
    padding: 0.375rem 0.625rem;
    background: var(--color-zen-bg-secondary);
    border: 1px solid var(--color-zen-subtle);
    border-radius: 0.25rem;
    font-family: var(--font-family-sans);
    font-size: 0.75rem;
    color: var(--color-text-secondary);
    cursor: pointer;
    opacity: 0;
    transition: opacity 0.2s ease, background-color 0.2s ease;
  }

  .article-content .code-block-wrapper:hover .copy-button {
    opacity: 1;
  }

  .article-content .copy-button:hover {
    background: var(--color-zen-bg-tertiary);
    color: var(--color-text-primary);
  }

  .article-content .copy-button.copied {
    color: #22c55e;
  }

  /* Lists */
  .article-content ul,
  .article-content ol {
    margin-bottom: 1.5rem;
    padding-left: 1.75rem;
  }

  .article-content ul {
    list-style-type: disc;
  }

  .article-content ol {
    list-style-type: decimal;
  }

  .article-content li {
    margin-bottom: 0.5rem;
    line-height: 1.75;
    padding-left: 0.375rem;
  }

  .article-content li > p {
    margin-bottom: 0.5rem;
  }

  .article-content li::marker {
    color: var(--color-text-secondary);
  }

  /* Nested lists */
  .article-content li > ul,
  .article-content li > ol {
    margin-top: 0.5rem;
    margin-bottom: 0.5rem;
  }

  /* Blockquotes */
  .article-content blockquote {
    border-left: 3px solid var(--color-zen-coral);
    padding-left: 1.25rem;
    margin: 2rem 0;
    font-style: italic;
    color: var(--color-text-secondary);
    font-size: 1.0625rem;
  }

  .article-content blockquote p {
    margin-bottom: 1rem;
  }

  .article-content blockquote p:last-child {
    margin-bottom: 0;
  }

  /* Images */
  .article-content img {
    max-width: 100%;
    height: auto;
    border-radius: 0;
    margin: 2.5rem 0;
    box-shadow: none;
  }

  /* Tool Badge - for citing tools/apps inline */
  .article-content p:has(.tool-badge) {
    display: inline-block;
  }

  .article-content .tool-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.875rem 1.25rem;
    background: var(--color-zen-bg-secondary);
    border: 1px solid var(--color-zen-subtle);
    border-radius: 9999px;
    font-size: 0.9375rem;
    font-weight: 500;
    color: var(--color-text-secondary);
    text-decoration: none;
    transition: all 0.2s ease;
    margin: 0.5rem 0;
  }

  .article-content a.tool-badge {
    border-bottom: none;
  }

  .article-content a.tool-badge:hover {
    background: var(--color-zen-bg-tertiary);
    color: var(--color-text-primary);
    border: 1px solid var(--color-text-tertiary);
  }

  .article-content .tool-badge img {
    width: 2.25rem;
    height: 2.25rem;
    object-fit: contain;
    margin: 0;
    border-radius: 0;
    box-shadow: none;
  }

  /* Horizontal rules */
  .article-content hr {
    border: none;
    border-top: 1px solid var(--color-zen-subtle);
    margin: 3rem 0;
  }

  /* Tables */
  .article-content table {
    width: 100%;
    border-collapse: collapse;
    margin: 2rem 0;
    font-size: 0.95rem;
  }

  .article-content th {
    font-family: var(--font-family-sans);
    font-weight: 600;
    text-align: left;
    padding: 0.75rem;
    border-bottom: 2px solid var(--color-zen-subtle);
    color: var(--color-text-primary);
  }

  .article-content td {
    padding: 0.75rem;
    border-bottom: 1px solid var(--color-zen-subtle);
  }

  /* Smooth anchor links */
  .article-content h2[id],
  .article-content h3[id],
  .article-content h4[id] {
    scroll-margin-top: 100px;
  }

  .article-content h2[id]:hover::before,
  .article-content h3[id]:hover::before,
  .article-content h4[id]:hover::before {
    content: '#';
    position: absolute;
    margin-left: -1.5rem;
    color: var(--color-zen-coral);
    font-weight: 400;
    opacity: 0.5;
  }

  /* First paragraph after heading - keep consistent */
  .article-content h2 + p {
    margin-top: 0.25rem;
  }

  .article-content h3 + p {
    margin-top: 0.25rem;
  }

  /* Better spacing for first h2 */
  .article-content > h2:first-child {
    margin-top: 0;
  }

  /* Scroll animations */
  .article-content > *:not(script) {
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.6s cubic-bezier(0.4, 0, 0.2, 1),
                transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .article-content > *.visible {
    opacity: 1;
    transform: translateY(0);
  }

  @media (prefers-reduced-motion: reduce) {
    .article-content > * {
      opacity: 1;
      transform: none;
      transition: none;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const articleContent = document.querySelector('.article-content');
    if (!articleContent) return;

    // Make all external links open in new tab
    const links = articleContent.querySelectorAll('a[href^="http"]');
    links.forEach(link => {
      link.setAttribute('target', '_blank');
      link.setAttribute('rel', 'noopener noreferrer');
    });

    // Add copy buttons to code blocks
    const codeBlocks = articleContent.querySelectorAll('pre');
    codeBlocks.forEach(pre => {
      // Create wrapper
      const wrapper = document.createElement('div');
      wrapper.className = 'code-block-wrapper';
      pre.parentNode?.insertBefore(wrapper, pre);
      wrapper.appendChild(pre);

      // Create copy button
      const copyButton = document.createElement('button');
      copyButton.className = 'copy-button';
      copyButton.textContent = 'Copy';
      copyButton.setAttribute('aria-label', 'Copy code to clipboard');
      wrapper.appendChild(copyButton);

      // Handle click
      copyButton.addEventListener('click', async () => {
        const code = pre.querySelector('code')?.textContent || pre.textContent || '';
        try {
          await navigator.clipboard.writeText(code);
          copyButton.textContent = 'Copied!';
          copyButton.classList.add('copied');
          setTimeout(() => {
            copyButton.textContent = 'Copy';
            copyButton.classList.remove('copied');
          }, 2000);
        } catch (err) {
          copyButton.textContent = 'Failed';
          setTimeout(() => {
            copyButton.textContent = 'Copy';
          }, 2000);
        }
      });
    });

    const elements = articleContent.querySelectorAll(':scope > *:not(script)');

    const observerOptions = {
      root: null,
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          entry.target.classList.add('visible');
          observer.unobserve(entry.target);
        }
      });
    }, observerOptions);

    elements.forEach(element => {
      observer.observe(element);
    });
  });
</script>
